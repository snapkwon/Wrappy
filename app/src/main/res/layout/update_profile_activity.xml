<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">

    <include layout="@layout/headerbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgProfileHeader"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:background="#cccccc"/>

            <ImageButton
                android:id="@+id/btnProfileCameraHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_camera_profile"
                android:background="@null"
                android:layout_margin="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginLeft="10dp">

                    <net.wrappy.im.helper.layout.CircleImageView
                        android:id="@+id/imgProfileAvarta"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/img_avarta"/>
                    <ImageButton
                        android:id="@+id/btnProfileCameraAvarta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:src="@drawable/ic_camera_profile"
                        android:background="@null"
                        android:layout_margin="10dp"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#fff"
                        android:padding="10dp">

                        <net.wrappy.im.helper.layout.AppTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/AppText03"
                            android:text="Username"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="#000"/>
                        <net.wrappy.im.helper.layout.AppEditTextView
                            android:id="@+id/edProfileUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Username"
                            style="@style/AppText02"
                            android:background="@null"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#fff"
                        android:layout_marginTop="10dp"
                        android:padding="10dp">

                        <net.wrappy.im.helper.layout.AppTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/AppText03"
                            android:text="Email"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="#000"/>
                        <net.wrappy.im.helper.layout.AppEditTextView
                            android:id="@+id/edProfileEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Email"
                            android:inputType="textEmailAddress"
                            style="@style/AppText02"
                            android:background="@null"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#fff"
                        android:layout_marginTop="10dp"
                        android:padding="10dp">

                        <net.wrappy.im.helper.layout.AppTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/AppText03"
                            android:text="Phone"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="#000"/>
                        <net.wrappy.im.helper.layout.AppEditTextView
                            android:id="@+id/edProfilePhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Phone"
                            style="@style/AppText02"
                            android:background="@null"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#fff"
                        android:layout_marginTop="10dp"
                        android:padding="10dp">

                        <net.wrappy.im.helper.layout.AppTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/AppText03"
                            android:text="Other"/>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:background="#000"/>
                        <net.wrappy.im.helper.layout.AppEditTextView
                            android:id="@+id/edProfileOther"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Other"
                            style="@style/AppText02"
                            android:background="@null"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp"
                        android:padding="10dp">

                        <net.wrappy.im.helper.layout.AppButton
                            android:id="@+id/btnProfileComplete"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="COMPLETE"
                            style="@style/AppButton01"
                            />

                        <net.wrappy.im.helper.layout.AppButton
                            android:id="@+id/btnProfileSkip"
                            android:layout_marginTop="20dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="SKIP"
                            style="@style/AppButton02"
                            />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

    </ScrollView>


</LinearLayout>