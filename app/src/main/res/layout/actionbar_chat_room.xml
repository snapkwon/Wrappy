<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/chat_room_avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/avatar"/>

    <ImageView
        android:id="@+id/chat_room_status"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:src="@drawable/status_active"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"/>

    <net.wrappy.im.helper.layout.AppTextView
        android:id="@+id/chat_room_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_toRightOf="@id/chat_room_avatar"
        android:layout_marginLeft="10dp" />

</RelativeLayout>