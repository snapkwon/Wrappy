<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:gravity="center|top"
    android:orientation="vertical"
    >



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/intro1"
        android:gravity="top"
        />

    <net.ironrabbit.type.CustomTypefaceEditText
        android:id="@+id/edtUserMame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/id_or_username"
        android:layout_margin="10dp"
        android:layout_gravity="bottom"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        />

    <net.ironrabbit.type.CustomTypefaceButton
        android:id="@+id/btnforgetpass"
        android:textSize="15pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forget_password"
        android:layout_margin="10dp"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_rect_primary"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@android:style/Widget.Button"

        />



    <net.ironrabbit.type.CustomTypefaceButton
        android:id="@+id/btnShowLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"
        android:layout_margin="10dp"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_rect_primary"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@android:style/Widget.Button"

        />

    <net.ironrabbit.type.CustomTypefaceButton
        android:id="@+id/btnShowRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_an_account"
        android:layout_margin="10dp"
        android:layout_gravity="bottom"
        android:background="@drawable/rounded_rect_primary"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@android:style/Widget.Button"

        />



</LinearLayout>