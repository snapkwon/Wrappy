<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="net.wrappy.im.ui.PackupWalletAccount">

    <ImageView
        android:id="@+id/imageQRcode"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@mipmap/ic_launcher" />

    <net.ironrabbit.type.CustomTypefaceButton
        android:id="@+id/btnsaveQRwallet"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:text="@string/btn_save_qr_wallet"
        android:textSize="18dp"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:gravity="center"
        android:background="@drawable/regbtn_states"/>
</LinearLayout>
