<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        style="@style/match_width"
        android:orientation="vertical">

        <net.ironrabbit.type.CustomTypefaceTextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"
            android:textColor="#444344"
            android:textSize="22sp"
            android:text="@string/create_new_password" />

        <net.ironrabbit.type.CustomTypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/create_new_password"
            android:textColor="#444344"
            android:textSize="20sp" />

        <net.ironrabbit.type.CustomTypefaceEditText
            android:id="@+id/edtpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/ic_visibility_black_24dp"
            android:ems="10"
            android:hint="@string/lock_screen_create_passphrase"
            android:inputType="textPassword"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:textColor="#444344" />

        <net.ironrabbit.type.CustomTypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/lock_screen_confirm_passphrase"
            android:textColor="#444344"
            android:textSize="20sp" />

        <net.ironrabbit.type.CustomTypefaceEditText
            android:id="@+id/edtconfirmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:ems="10"
            android:hint="@string/lock_screen_create_passphrase"
            android:inputType="textPassword"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:textColor="#444344" />

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <net.ironrabbit.type.CustomTypefaceButton
        android:id="@+id/btcreatepassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/regbtn_states"
        android:text="@string/title_create_new_wallet"
        android:textColor="#fff" />

</FrameLayout>

    </LinearLayout>
</ScrollView>
