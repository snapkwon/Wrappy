<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        style="@style/match_width"
        android:orientation="vertical">

        <net.wrappy.im.helper.layout.AppTextView
            android:id="@+id/tile_input_password_page"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="@string/create_new_password"
            android:textColor="#979797"
            android:textSize="17sp" />

        <net.wrappy.im.helper.layout.AppTextView
            android:id="@+id/title_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/alert_password_wallet_background"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="@string/create_new_password"
            android:textColor="#232323"
            android:textSize="15sp"
            android:textStyle="bold" />

        <net.wrappy.im.helper.layout.AppEditTextView
            android:id="@+id/edtpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_visibility_black_24dp"
            android:ems="10"
            android:hint="@string/lock_screen_create_passphrase"
            android:inputType="textPassword"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:textColor="#bebebe"
            android:textSize="14sp" />

        <net.wrappy.im.helper.layout.AppTextView
            android:id="@+id/title_confirm_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/alert_password_wallet_background"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="@string/lock_screen_confirm_passphrase"
            android:textColor="#232323"
            android:textSize="15sp"
            android:textStyle="bold" />

        <net.wrappy.im.helper.layout.AppEditTextView
            android:id="@+id/edtconfirmpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_visibility_black_24dp"
            android:ems="10"
            android:hint="@string/lock_screen_create_passphrase"
            android:inputType="textPassword"
            android:paddingBottom="10dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="10dp"
            android:textColor="#bebebe"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="1dp"
            android:background="#d4d4d4" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <net.ironrabbit.type.CustomTypefaceButton
                android:id="@+id/btcreatepassword"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/regbtn_states"
                android:text="@string/btn_next"
                android:textColor="#fff" />

        </FrameLayout>

    </LinearLayout>
</ScrollView>
