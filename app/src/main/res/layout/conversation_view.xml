<view xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/convoitemview"
    class="net.wrappy.im.ui.ConversationListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:layout_marginLeft="16dp">


    <LinearLayout
        android:id="@+id/message_container"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginLeft="72dp"
        android:orientation="vertical"
        android:padding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <net.ironrabbit.type.CustomTypefaceTextView
                android:id="@+id/line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:singleLine="true"
                android:textSize="14sp"
                android:textStyle="bold" />

            <net.ironrabbit.type.CustomTypefaceTextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif-light"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#bebebe" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <net.ironrabbit.type.CustomTypefaceTextView
                android:id="@+id/line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="28dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingBottom="6dp"
                android:textSize="13sp"
                android:textColor="#666666" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pinIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pin_pink"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/statusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:padding="3dp"
                    android:scaleType="centerCrop" />

            </LinearLayout>


        </RelativeLayout>

        <net.ironrabbit.type.CustomTypefaceTextView
            android:id="@+id/line3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="?contactTextSecondary"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bebebe"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>


    </LinearLayout>

    <ImageView
        android:id="@+id/media_thumbnail"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_gravity="left|bottom"
        android:layout_marginTop="30dp"
        android:focusableInTouchMode="false"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/avatarStatus"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="left|top"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:padding="2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/status_active"
        android:visibility="gone" />

</view>
