<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <net.wrappy.im.helper.layout.AppTextView
        style="@style/AppText02"
        font_type="light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/input_your_email"
        android:textSize="17sp"
        android:textColor="#979797"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginBottom="79dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:background="#f4f4f4">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_email_1" />

        <net.wrappy.im.helper.layout.AppEditTextView
            android:id="@+id/edForgetPasswordEmail"
            style="@style/AppText02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:hint="@string/hint_your_email"
            android:textColorHint="#bebebe"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:paddingLeft="37dp"
            android:background="@android:color/transparent"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#979797"
            android:layout_gravity="bottom"
            android:layout_marginBottom="15dp"/>

    </FrameLayout>

    <net.wrappy.im.helper.layout.AppButton
        android:id="@+id/btnForgetPasswordResetEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        style="@style/AppButton_OK"
        android:gravity="center"
        android:text="@string/otr_qa_send"
        android:textColor="@android:color/white"
        android:textStyle="bold" />
</LinearLayout>