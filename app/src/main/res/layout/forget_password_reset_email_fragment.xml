<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <net.wrappy.im.helper.layout.AppTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        style="@style/AppText02"
        android:text="Input your email"
        android:gravity="center"
        font_type="light"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_email"
            android:layout_gravity="center_vertical"/>
        <net.wrappy.im.helper.layout.AppEditTextView
            android:id="@+id/edForgetPasswordEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="30dp"
            style="@style/AppText02"
            android:imeOptions="actionDone"/>

    </FrameLayout>

    <net.wrappy.im.helper.layout.AppButton
        android:id="@+id/btnForgetPasswordResetEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="bottom"
        android:background="@drawable/regbtn_states"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:gravity="center"
        />

</LinearLayout>