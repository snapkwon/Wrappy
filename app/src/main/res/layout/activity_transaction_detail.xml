<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <ImageView
        android:id="@+id/transaction_detail_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_receive_pink2x"
        />
    <TextView
        android:id="@+id/transaction_detail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textSize="18sp"
        android:textColor="#000"/>
    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/wallet_tx_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ethereum"/>

        <TextView
            android:id="@+id/transaction_detail_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="48sp"
            android:text="0.000"
            android:textColor="@color/textethereum"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAllCaps="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/transaction_detail_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/27/2016 13:22 PM (2 months ago)"
            android:textSize="16sp"/>
    </RelativeLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmations"
            android:layout_centerVertical="true"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/transaction_detail_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6+"
            android:padding="5dp"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </RelativeLayout>

    <View android:layout_width="match_parent" android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:weightSum="5">
        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>
        <RelativeLayout
            android:id="@+id/transaction_detail_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIEW MORE"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>