<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        style="@style/match_width"
        android:orientation="vertical">


        <net.wrappy.im.helper.layout.AppTextView
            android:id="@+id/tvCountdownTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="#979797"
            android:textSize="17sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#f2f2f2">

            <net.wrappy.im.helper.layout.AppEditTextView
                android:id="@+id/edtpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/background_text_with_line"
                android:drawableLeft="@drawable/ic_lock_1"
                android:drawablePadding="5dp"
                android:drawableRight="@drawable/ic_hidden"
                android:ems="10"
                android:hint="@string/input_your_password"
                android:inputType="textPassword"
                android:padding="5dp"
                android:paddingLeft="5dp"
                android:textColor="#232323"
                android:textSize="14sp" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <net.wrappy.im.helper.layout.AppButton
                android:id="@+id/btnlogin"
                style="@style/AppButton_OK"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginTop="25dp"
                android:text="@string/btn_next"
                android:textColor="#fff" />

            <net.wrappy.im.helper.layout.AppTextView
                android:id="@+id/btnforgetpass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/forget_passcode"
                android:textColor="#979797"
                android:textSize="17sp" />


        </LinearLayout>


    </LinearLayout>
</ScrollView>
