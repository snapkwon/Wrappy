<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:padding="5dp"
    android:background="@drawable/border_shadow">

    <TextView
        android:id="@+id/text_menu_settings_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/translate_to"/>

    <Spinner
        android:id="@+id/spinner_settings_language"
        android:spinnerMode="dropdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Spinner>

    <Switch
        android:id="@+id/switch_turn_on_off_translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/text_turn_on_off_translate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/turn_off_translate"/>

</LinearLayout>