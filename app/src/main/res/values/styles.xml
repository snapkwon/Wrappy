<resources>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.ChatSwitcher" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_im_switch_chats_strip</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="SupportApp" parent="Theme.AppCompat.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:actionBarStyle">@style/SupportApp.MyActionBar</item>
        <item name="colorPrimary">@color/zom_primary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/menu_text_active</item>
        <item name="colorAccent">#FF2b63</item>

    </style>

    <style name="SupportApp.MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/zom_primary</item>
        <item name="android:color">@android:color/white</item>
        <item name="android:logo">@android:color/transparent</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_arrow_back</item>
        <item name="android:titleTextStyle">@style/SupportApp.MyActionBar.Text</item>
    </style>

    <style name="SupportApp.MyActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="btn_white">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn_gray">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#b6b</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="btn_black">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- the following can be used to style the overflow menu button
         only do this if you have an *extremely* good reason to!! -->
    <!--<style name="MyOverflowButton" parent="Widget.Sherlock.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_view</item>
        <item name="android:background">@drawable/action_button_background</item>
    </style>-->


    <style name="ChatSwitcherDialogTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="InviteDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

    </style>

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light">


        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/zom_primary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/menu_text_active</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">#FF2b63</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

        <item name="messageRoundBackground">@drawable/message_view_rounded_light</item>
        <item name="messageTextPrimary">#111111</item>
        <item name="messageTextSecondary">#aaaaaa</item>

        <item name="listBackground">#e6e7e8</item>

        <item name="toolbarBackground">#263238</item>
        <item name="inputBackground">#FFFFFF</item>
        <!-- customize the color palette -->

        <item name="contactTextPrimary">#333333</item>
        <item name="contactTextSecondary">#777777</item>

        <item name="attachIcon">@drawable/content_new_attachment_dark</item>

        <item name="actionBarTheme">@style/AppBaseTheme.Toolbar</item>

        <item name="actionModeStyle">@style/LStyled.ActionMode</item>

        <item name="actionMenuTextColor">@android:color/white</item>

        <item name="windowActionModeOverlay">true</item>

    </style>

    <style name="LStyled.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/zom_primary</item>
    </style>

    <!--Action bar-->
    <style name="AppBaseTheme.Toolbar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="colorControlNormal">#ffffff</item>
    </style>

    <style name="AppThemeNoAction" parent="@style/AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppThemeDark" parent="@style/Theme.AppCompat">
        <item name="messageTextPrimary">#dddddd</item>
        <item name="messageRoundBackground">@drawable/message_view_rounded_dark</item>
        <item name="messageTextSecondary">#aaaaaa</item>
        <item name="listBackground">#263238</item>
        <item name="contactTextPrimary">#dddddd</item>
        <item name="contactTextSecondary">#aaaaaa</item>

        <item name="toolbarBackground">#263238</item>
        <item name="inputBackground">#CC263238</item>

        <!-- customize the color palette -->

        <item name="colorPrimary">#323232</item>
        <item name="colorPrimaryDark">#111111</item>
        <item name="colorAccent">#EA657B</item>

        <item name="windowActionBar">true</item>
        <!--   <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
        <item name="windowActionModeOverlay">true</item>
        <item name="attachIcon">@drawable/content_new_attachment</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_height">8dp</item>
    </style>

    <style name="Toolbar.SubtitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_height">8dp</item>
    </style>


    <!--
    
   <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
    <item name="spinBars">true</item>
    <item name="color">@android:color/white</item>
</style>
-->

    <style name="GroupInfoAction">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_margin">@dimen/detail_view_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:autoLink">none</item>
    </style>

    <style name="AppText01">
        <item name="android:textColor">#b9b1a3</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppText02_Menu">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppText02" parent="AppText02_Menu">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AppText03">
        <item name="android:textColor">#ea657c</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppButton01">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#ea657b</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AppButton02">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">#fff</item>
    </style>

    <style name="match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_height">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_width">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/message_background_dark</item>
    </style>

    <style name="dividerMainMenu" parent="divider">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>
